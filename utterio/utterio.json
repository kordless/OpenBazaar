{
  "image": {
    "url": "{{ dynamic_image_url }}",
    "name": "{{ dynamic_image_name }}",
    "container_format": "bare",
    "disk_format": "qcow2"
  },
  "callback_url": "",
  "ssh_keys": [
    "{{ public_ssh_key }}",
    ""
  ],
  "post_create": [
    "#cloud-config",
    "hostname: utterio",
    "manage_etc_hosts: true",
    "runcmd:",
    " - [ wget, '{{ project_url }}/master/utterio/install.sh', -O, /tmp/install.sh ]",
    " - chmod 755 /tmp/install.sh",
    " - /tmp/install.sh"
  ]
}
